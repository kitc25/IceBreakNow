<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/nav_item_layout">

    <ImageView
        android:id="@+id/nav_item_img"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/nav_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nav_item_img"
        android:layout_alignParentTop="true"
        android:text="Discover"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/nav_item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_item_title"
        android:layout_alignStart="@id/nav_item_title"
        android:textColor="@android:color/darker_gray"/>
</RelativeLayout>