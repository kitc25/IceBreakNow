<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.purplecorn.icebreaknow.FriendPreviewFrag">
    
    <com.purplecorn.icebreaknow.ui.ColorSquareImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/friend_img"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/friend_img"
        android:background="#33000000"
        >
        <TextView
            android:id="@+id/friend_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paul Frank"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/friend_age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/friend_name_text"
            android:text=", %1$d"
            />

    </RelativeLayout>

</RelativeLayout>
